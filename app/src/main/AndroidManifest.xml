<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gabrifermar.proyectodam">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".ProyectoDAMapp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoDAM">
        <activity
            android:name=".view.WeatherHistorical"
            android:exported="false" />
        <activity
            android:name=".C172Test"
            android:exported="false"
            android:theme="@style/Theme.ProyectoDAM.NoActionBar" />
        <activity
            android:name=".P06T"
            android:exported="false" />
        <activity
            android:name=".P28R"
            android:exported="false" />
        <activity
            android:name=".C172"
            android:exported="false" />
        <activity
            android:name=".FlightPlanner"
            android:exported="false" />
        <activity
            android:name=".NewWaypoint"
            android:exported="false" />
        <activity
            android:name=".FlightMenu"
            android:exported="false" />
        <activity
            android:name=".Charts"
            android:exported="false" />
        <activity
            android:name=".view.WeatherReports"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".NewUser"
            android:exported="true" />
        <activity
            android:name=".Usermain"
            android:exported="true"
            android:label="@string/title_activity_usermain"
            android:launchMode="singleTask"
            android:theme="@style/Theme.ProyectoDAM" />
        <activity
            android:name=".Admin"
            android:exported="true" />
        <activity
            android:name=".Settings"
            android:exported="true"
            android:label="Settings" />
        <activity
            android:name=".Home"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:launchMode="singleTask"
            android:theme="@style/Theme.ProyectoDAM.NoActionBar" />
        <activity
            android:name=".Splashscreen"
            android:exported="true"
            android:theme="@style/Theme.ProyectoDAM.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FirebaseMessagingService"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/cloudicon" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>